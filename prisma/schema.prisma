generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  tgId      String   @unique
  username  String? 
  fullName  String?
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  purchases Purchase[]
  orders    Order[]
}

model Video {
  id         String   @id @default(cuid())
  title      String
  description String?
  priceCents Int       @default(0)
  isFree     Boolean   @default(false)
  // Direct URL to your file (S3/Bunny/Cloudflare R2/YouTube Unlisted/etc.)
  mediaUrl   String
  thumbUrl   String?
  category   String?
  createdAt  DateTime  @default(now())
  purchases  Purchase[]
}

model Purchase {
  id        String   @id @default(cuid())
  userId    String
  videoId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  video Video @relation(fields: [videoId], references: [id])

  @@unique([userId, videoId])
}

model Order {
  id         String   @id @default(cuid())
  userId     String
  videoId    String
  amount     Int      // cents
  status     OrderStatus @default(PENDING)
  provider   String?  // "stripe" | "click" | "payme" | etc.
  payload    String?  // provider payload / metadata
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id])
  video Video @relation(fields: [videoId], references: [id])
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}
